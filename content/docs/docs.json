{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Screenpipe Documentation",
  "colors": {
    "primary": "#000000",
    "light": "#333333",
    "dark": "#000000"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "pages": [
          "index",
          "docs/quickstart",
          "docs/installation"
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "https://raw.githubusercontent.com/mediar-ai/screenpipe/refs/heads/main/content/openapi.yaml"
      }
    ]
  },
  "logo": {
    "light": "/lmstudio1.png",
    "dark": "/lmstudio1.png"
  },
  "navbar": {
    "links": [
      {
        "label": "support",
        "href": "mailto:support@screenpipe.co"
      }
    ],
    "primary": {
      "type": "button",
      "label": "download",
      "href": "https://screenpipe.co/download"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/screenpipe"
    }
  },
  "modeToggle": {
    "default": "dark"
  },
  "search": {
    "prompt": "search documentation..."
  }
}
